  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src/**/*", "types"]
}
